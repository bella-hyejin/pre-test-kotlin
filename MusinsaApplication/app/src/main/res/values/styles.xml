<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextStyle2">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textColor">@color/deep_sky_blue</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MeetingRoomText">
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/black_two</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ReservationCategoryRadioButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:button">@drawable/reservation_category_radio</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="ProgressNumber">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ActionBarStyle" parent="Theme.AppCompat">
        <item name="searchViewStyle">@style/SearchView</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:maxWidth">@dimen/search_max_width</item>
        <item name="android:searchIcon">@drawable/search_white_24</item>
        <item name="android:textColorHint">@color/very_light_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:queryHint">@string/enter_username</item>
    </style>

    <style name="NowArrow">
        <item name="android:background">@color/very_light_pink_two</item>
    </style>
</resources>
