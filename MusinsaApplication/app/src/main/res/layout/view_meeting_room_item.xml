<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="java.util.List"/>
        <import type="android.util.SparseBooleanArray" />
        <variable
            name="meetingRoom"
            type="com.hyejin.musinsa.musinsaapp.domain.local.model.MeetingRoom" />

        <variable name="isInTimes" type="SparseBooleanArray" />
        <variable name="nowPosition" type="Integer" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:id="@+id/meeting_room_name_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/TextStyle"
            android:text="@{meetingRoom.name}"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/question"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            />
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/meeting_room_location_text"
            android:textSize="12sp"
            android:textColor="@color/brownish_grey"
            android:lineSpacingExtra="6sp"
            android:text="@{meetingRoom.location}"
            app:layout_constraintTop_toBottomOf="@+id/meeting_room_name_text"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <include
            android:id="@+id/reservation_progress_container"
            layout="@layout/reservation_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/meeting_room_location_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:reservations="@{meetingRoom.reservations}"
            app:isInTimes="@{isInTimes}"
            app:nowPosition="@{nowPosition}"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>