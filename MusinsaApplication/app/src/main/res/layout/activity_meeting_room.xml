<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="java.util.List"/>
        <import type="com.hyejin.musinsa.musinsaapp.domain.local.model.MeetingRoom"/>

        <variable name="meetingRooms" type="List&lt;MeetingRoom&gt;" />
        <variable
            name="nowDate"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.meeting.MeetingRoomActivity"
        android:background="@color/very_light_blue">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/black"
            android:paddingStart="15dp"
            android:paddingBottom="6dp"
            android:paddingEnd="0dp"
            android:paddingTop="20dp"
            android:gravity="center_vertical"
            app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/header_container">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:lineSpacingExtra="30sp"
                android:text="@{nowDate}"
                android:id="@+id/title_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/general_open_fff"
                android:layout_toRightOf="@+id/title_text"
                android:layout_toEndOf="@id/title_text"
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_open"
                app:layout_constraintStart_toEndOf="@+id/title_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/general_settings"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_setting"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_available_meeting_room"
            android:text="@string/title_available_meeting_room"
            app:layout_constraintTop_toBottomOf="@+id/header_container"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            style="@style/TextStyle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_available_meeting_room"
            android:text="@{Integer.toString(meetingRooms.size())}"
            app:layout_constraintTop_toBottomOf="@+id/header_container"
            app:layout_constraintLeft_toRightOf="@+id/title_available_meeting_room"
            app:layout_constraintTop_toTopOf="@+id/title_available_meeting_room"
            style="@style/TextStyle2"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontal_scroll"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@+id/title_available_meeting_room"
            app:layout_constraintStart_toStartOf="parent"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:id="@+id/available_meeting_room_btn_container"
                app:add_meeting_room_view="@{meetingRooms}"
                >
            </LinearLayout>
        </HorizontalScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="5dp"
            android:layout_marginTop="37dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll"
            android:id="@+id/list_header_container"
            >
            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@color/deep_sky_blue"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/reservation_indication"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/brownish_grey"
                android:lineSpacingExtra="6sp"
                android:text="예약가능"
                app:layout_constraintLeft_toRightOf="@id/reservation_indication"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:checkedButton="@id/btn_reservation"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reservation_available"
                    style="@style/ReservationCategoryRadioButton"
                    android:id="@+id/btn_reservation"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/outside_meeting"
                    style="@style/ReservationCategoryRadioButton"
                    android:id="@+id/btn_out_meeting"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_reservation"
                    style="@style/ReservationCategoryRadioButton"
                    android:id="@+id/my_reservation"
                    />
            </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/meeting_room_list"
            app:layout_constraintTop_toBottomOf="@+id/list_header_container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            app:layoutManager="LinearLayoutManager"
            app:load_data="@{meetingRooms}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>